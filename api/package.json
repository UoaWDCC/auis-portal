{
  "name": "auis-api",
  "version": "0.0.0",
  "main": "index.js",
  "repository": "https://github.com/UoAWDCC/auis-portal",
  "author": "WDCC Projects <projects@wdcc.co.nz>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon index.ts",
    "email": "email dev",
    "start-web": "cd ../web && yarn run dev",
    "start-api": "yarn run dev",
    "con": "concurrently \"yarn run start-api\" \"yarn run start-web\"",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "node -r esbuild-register ./scripts/migrate.ts",
    "db:seed": "node -r esbuild-register ./scripts/seed.ts",
    "db": "yarn db:generate && yarn db:migrate",
    "db:visualise": "drizzle-kit studio",
    "generate-types": "quicktype ../api/types/types.ts -o ../web/src/types/backend-types.ts --just-types",
    "watch-types": "nodemon -e ts -x \"yarn generate-types\""
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.17",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.18",
    "concurrently": "^8.2.2",
    "drizzle-kit": "^0.22.1",
    "nodemon": "^3.0.3",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@clerk/clerk-sdk-node": "^5.0.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/nodemailer": "^6.4.14",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1",
    "drizzle-orm": "^0.31.0",
    "express": "^4.18.2",
    "express-cors": "^0.0.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.1.1",
    "onchange": "^7.1.0",
    "postgres": "^3.4.4",
    "quicktype": "^23.0.170",
    "ts-node": "^10.9.2",
    "zod": "^3.22.4"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e"
}
